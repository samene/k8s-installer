[kubelet]
distinguished_name = kubelet_distinguished_name
prompt             = no
req_extensions     = kubelet_req_extensions

[kubelet_req_extensions]
basicConstraints     = CA:FALSE
extendedKeyUsage     = clientAuth, serverAuth
keyUsage             = critical, digitalSignature, keyEncipherment
nsCertType           = client
nsComment            = "{{ansible_hostname}} kubelet Certificate"
subjectAltName       = DNS:{{ansible_hostname}}, IP:127.0.0.1
subjectKeyIdentifier = hash

[kubelet_distinguished_name]
CN = system:node:{{ansible_hostname}}
O  = system:nodes
C  = IN
ST = Maharashtra
L  = Pune

